<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/forecast_day_padding_5dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/week_day"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:textSize="@dimen/forecast_day_text_size" />

    <TextView
        android:id="@+id/min_max_temperature"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="-5\u2103/10\u2103"
        android:textSize="@dimen/forecast_day_text_size" />

    <ImageView
        android:id="@+id/day_sky_condition"
        android:layout_width="33dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/snow"/>

</androidx.appcompat.widget.LinearLayoutCompat>